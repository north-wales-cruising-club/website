{
  "repositories": [
    {
      "type": "composer",
      "url": "https://wpackagist.org"
    },
    {
        "type": "package",
        "package": {
            "name": "wordpress/wordpress",
			"replace": {
				"johnpbloch/wordpress": "*"
			},
            "type": "wordpress-core",
            "version": "4.9.4",
            "source": {
                "type": "git",
                "url": "https://github.com/WordPress/WordPress.git",
                "reference": "4.9.4"
            }
        }
    }
  ],
  "require": {
    "wordpress/wordpress": "*",
    "wpackagist-plugin/akismet": "*",
    "wpackagist-plugin/awesome-weather": "*",
    "wpackagist-plugin/buddypress": "*",
    "wpackagist-plugin/cookie-notice": "*",
    "wpackagist-plugin/events-manager": "*",
    "wpackagist-plugin/import-users-from-csv-with-meta": "*",
    "wpackagist-plugin/jetpack": "*",
    "wpackagist-plugin/mailgun": "*",
    "wpackagist-plugin/netcam-live-stream": "*",
    "wpackagist-plugin/restrict-content-by-role": "*",
    "wpackagist-plugin/theme-my-login": "*",
    "wpackagist-plugin/user-role-editor": "*",
    "wpackagist-plugin/visual-form-builder": "*",
    "wpackagist-plugin/wordpress-seo": "*",
    "wpackagist-theme/smartline-lite": "*",
	"psycle-wordpress/wordpress-core-installer": "^1.0"
  },
  "extra": {
    "wordpress-install-dir": "wp",
    "installer-paths": {
        "custom/mu-plugins/{$name}": ["type:wordpress-muplugin"],
        "custom/plugins/{$name}/": ["type:wordpress-plugin"],
        "custom/themes/{$name}/": ["type:wordpress-theme"]
    }
  }
}
